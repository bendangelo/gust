html
  head
    meta(http-equiv='X-UA-Compatible', content='IE=Edge,chrome=1')
    title Play Test
    link(rel='Shortcut Icon', href='/test/favicon.ico')

    // css
    for c in css.split(',')
      link(href="/#{c}", type="text/css", rel="stylesheet")

    // vendor
    for j in vendorjs.split(',')
      script(src="/#{j}")

    // lib
    for j in lib.split(',')
      script(src="/#{j}")

  body
    #content
      h1 Play

      .canvas
        canvas#game-canvas(width='500', height='400')
          p
            | Requires a modern browser to play. Try downloading
            a(href='http://google.com/chrome') Chrome
            | .

  script

    // entry point
    Game.init();